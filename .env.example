# --- Runtime ---
APP_ENV=prod
TZ=America/Los_Angeles

# --- Telegram ---
TELEGRAM_BOT_TOKEN=replace_me
TELEGRAM_CHAT_ID=replace_me
TELEGRAM_APPROVAL_TOPIC_ID=replace_me_optional

# --- Database (choose ONE) ---
# Local docker compose postgres:
DATABASE_URL=postgresql://postgres:postgres@db:5432/sse
# Or Supabase:
# DATABASE_URL=postgresql://user:pass@host:5432/postgres

# --- LLM Keys (optional: you can run with stubs for local testing) ---
ANTHROPIC_API_KEY=replace_me
GEMINI_API_KEY=replace_me
XAI_API_KEY=replace_me_optional

# --- RepSpark / ATS / Integrations ---
REPSPARK_USERNAME=replace_me
REPSPARK_PASSWORD=replace_me
GOOGLE_OAUTH_JSON_PATH=/run/secrets/google_oauth.json

# --- Budgets ---
DAILY_USD_CAP=10
TASK_TOKEN_CAP=50000
BOOST_THRESHOLD_PCT=85

# --- Security ---
ALLOWLIST_DOMAINS=docs.anthropic.com,code.claude.com,docs.openclaw.ai
